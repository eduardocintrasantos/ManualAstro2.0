---
export interface Props {
  title: string;
}

const { title } = Astro.props;
import Menu from "../components/Menu/menu.astro";
import Cabecalho from "../components/logo/cabecalho.astro";
---

<!DOCTYPE html>
<html lang="pt-br">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <nav class="nav-list">
      <Cabecalho />
    </nav>
    <div class="main-grid">
      <aside>
        <Menu />
      </aside>
      <main>
        <slot />
      </main>
    </div>

    <style>
      * {
        padding: 0;
        margin: 0;
        box-sizing: border-box;
      }

      html {
        font-size: 100%;
      } /*16px*/

      body {
        background: #f2f4f6;
        font-family: "Montserrat", sans-serif;
        font-weight: 400;
        line-height: 1.75;
        color: #181819;
      }

      p {
        margin-bottom: 1rem;
      }

      h1,
      h2,
      h3,
      h4,
      h5 {
        margin: 3rem 0 1.38rem;
        font-family: "Montserrat", sans-serif;
        font-weight: 400;
        line-height: 1.3;
      }

      h1 {
        margin-top: 0;
        font-size: 3.052rem;
      }

      h2 {
        font-size: 2.441rem;
      }

      h3 {
        font-size: 1.953rem;
      }

      h4 {
        font-size: 1.563rem;
      }

      h5 {
        font-size: 1.25rem;
      }

      small,
      .text_small {
        font-size: 0.8rem;
      }

      ul {
        list-style: none;
      }

      /* ================================================== */
      /* navbar */
      /* ================================================== */
      nav {
        display: flex;
        justify-content: space-between;
        /*align-items: center;*/
        padding: 1rem 5rem;
        height: 5rem;
        border-bottom: 1px solid lightgray;
        position: sticky;
        top: 0;
        left: 0;
        background-color: #fff;
        z-index: 1;
      }

      .nav-list {
        list-style: none;
        display: flex;
        justify-content: space-between;
        align-items: center;
        gap: 2rem;
      }

      /* ================================================== */
      /* main-grid */
      /* ================================================== */
      .main-grid {
        display: flex;
        justify-content: flex-start;
        gap: 1rem;
        padding: 0 5rem;
      }

      aside {
        flex-basis: 200px;
        border-right: 1px solid lightgray;
        position: sticky;
        top: 7rem;
        height: calc(100vh - 7rem);
      }

      main {
        flex: 1;
        position: sticky;
        top: 7rem;
      }

      .right-content {
        flex-basis: 400px;
        border-left: 1px solid lightgray;
        position: sticky;
        top: 7rem;
        height: calc(100vh - 7rem);
        padding-left: 1rem;
        overflow-y: scroll;
      }

      .right-content::-webkit-scrollbar {
        display: none;
      }
    </style>
  </body>
</html>
