---
export interface Props {
  title: string;
}

const { title } = Astro.props;
import Menu from "../components/Menu/menu.astro";
import Cabecalho from "../components/logo/cabecalho.astro";
---

<!DOCTYPE html>
<html lang="pt-br">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <nav class="nav-list">
      <Cabecalho />
    </nav>
    <div class="main-grid">
      <aside>
        <Menu />
      </aside>
      <main>
        <slot />
      </main>
    </div>

    <style>
      * {
        padding: 0;
        margin: 0;
        box-sizing: border-box;
      }
      nav {
        display: flex;
        justify-content: space-between;
        align-items: center;
        position: fixed;
        padding: 1rem 2rem;
        height: 5rem;
        top: 0;
        left: 0;
        z-index: 1;
      }

      .nav-list {
        padding: 0px;
      }
      body {
        background-color: rgb(245, 251, 255);
        /*background-color: #778899;*/
        overflow-x: hidden;
        /*overflow-y: hidden;*/
        height: 100vh;
        scrollbar-width: thin;
        font-family: "DM Sans", sans-serif;
      }
      aside {
        flex-basis: 200px;
        position: sticky;
        top: 7rem;
        height: calc(100vh - 7rem);
        overflow-y: scroll;
        border-right: 1px solid rgb(182, 182, 182);
      }
      main {
        flex: 1;
        position: sticky;
        top: 7rem;
        margin-top: 100px;
      }
      .main-grid {
        display: flex;
        justify-content: flex-start;
        padding: 0 2rem;
        width: 100vw;
      }
      aside::-webkit-scrollbar {
        display: none;
      }

      @media(min-width: 870px) {
        main {
          margin-left: 2rem;
        }
      }
      
      @media(max-width: 870px) {
        
        aside {
          display: none;
          max-width: 100%;
        }
      }
      
    </style>
  </body>
</html>
