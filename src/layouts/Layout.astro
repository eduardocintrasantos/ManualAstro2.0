---
export interface Props {
  title: string;
}

const { title } = Astro.props;
import Menu from "../components/Menu/menu.astro";
import Cabecalho from "../components/logo/cabecalho.astro";
import img from "../logo/N2Logo_Completo_Blue (1).png";
---

<!DOCTYPE html>
<html lang="pt-br">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <header></header>
    <main>
      <Menu />
      <slot />
    </main>

    <style>
      body {
        margin: 0;
        padding: 0;
        background-color: rgb(245, 245, 255);
      }
      main {
        display: flex;
      }
    </style>
  </body>
</html>
