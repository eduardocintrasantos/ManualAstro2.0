import img5 from "../../imagens/ordemServico/img5.png";
import img6 from "../../imagens/ordemServico/img6.png";
import img7 from "../../imagens/ordemServico/img7.png";
import img8 from "../../imagens/ordemServico/img8.png";
import img9 from "../../imagens/ordemServico/img9.png";
import img10 from "../../imagens/ordemServico/img10.png";
