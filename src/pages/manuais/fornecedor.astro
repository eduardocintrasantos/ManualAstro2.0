---
import Layout from "../../layouts/Layout.astro";
import "./style.css";

import img1 from "../../imagens/fornecedor/img1.png";
import img2 from "../../imagens/fornecedor/img2.png";
import img3 from "../../imagens/fornecedor/img3.png";
