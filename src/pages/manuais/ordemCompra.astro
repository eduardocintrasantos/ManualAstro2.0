import img4 from "../../imagens/ordemCompra/img4.png";
import img5 from "../../imagens/ordemCompra/img5.png";
import img6 from "../../imagens/ordemCompra/img6.png";
import img7 from "../../imagens/ordemCompra/img7.png";
import img8 from "../../imagens/ordemCompra/img8.png";
import img9 from "../../imagens/ordemCompra/img9.png";
import img10 from "../../imagens/ordemCompra/img10.png";
