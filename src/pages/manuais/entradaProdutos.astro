import img4 from "../../imagens/entradaProdutos/img4.png";
import img5 from "../../imagens/entradaProdutos/img5.png";
import img6 from "../../imagens/entradaProdutos/img6.png";
import img7 from "../../imagens/entradaProdutos/img7.png";
import img8 from "../../imagens/entradaProdutos/img8.png";
